unit Ex4;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm4 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Button1: TButton;
    Label4: TLabel;
    Panel1: TPanel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form4: TForm4;

implementation

{$R *.dfm}

procedure TForm4.Button1Click(Sender: TObject);
var
  xVendedor: string;
  xSalarioFixo, xVendas, xSalarioTotal: double;

begin
  xVendedor      := Edit1.Text;
  xSalarioFixo   := StrToFloat(Edit2.Text);
  xVendas        := StrToFloat(Edit3.Text);
  xSalarioTotal  := xSalarioFixo + (xVendas * 0.15);
  Label4.Caption := ('O salário total de '+xVendedor+' é R$ '
  +FormatFloat('#.00',xSalarioTotal));
end;

end.
